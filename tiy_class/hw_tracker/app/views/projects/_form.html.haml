= form_for [@location, @unit, @project] do |f|
  = if f.object.errors.messages.length > 0
    <!-- Render the errors to the user -->
    = f.object.errors.messages.inspect  
    %br
      -f.object.errors.messages.each do |key, value| 
        -value.each do |message| 
          = key = message 
          %br
  = f.text_field :name, class: 'form-control focusedInput', placeholder: 'Add Project Name Here...'
  = f.date_select(:date, :start_year => 1900)
  = f.text_area :description, class: 'form-control focusedInput', placeholder: 'Add Project Description Here...', rows: '10'
  = f.text_area :requirements, class: 'form-control focusedInput', placeholder: 'Add Project Requirements Here...', rows: '10'
  =f.submit "Add Project", class: 'btn btn-success btn-block'
