<link rel="stylesheet" type="text/css" href="blog.css">

<h1>Edit Blog Post</h1>
<form action="/edit_blogpost/<%= @blogpost.id %>" method= "post">
  <input type= "hidden" name="_method" value="put">
  <label for= "title">Title</label>
  <input type= "text" id="title" name="blogpost[title]" size="150" value= "<%= @blogpost.title %>">
  </br>
  <label for= "content">Content</label>
  <textarea type= "text" id="content" rows="20" cols="100" name="blogpost[content]"><%= @blogpost.content %></textarea>
  </br>
  <input type="submit" value="Edit Blog Post">
</form>

<a href="/">Back</a>


