= form_for [@hospital, @patient] do |f|
  = if f.object.errors.messages.length > 0
    <!-- Render the errors to the user -->
    = f.object.errors.messages.inspect  
    %br
      -f.object.errors.messages.each do |key, value| 
        -value.each do |message| 
          = key = message 
          %br
  %p= f.label :first_name
  %p= f.text_field :first_name
  %p= f.label :last_name
  %p= f.text_field :last_name
  %p= f.label "Male"
  %p= f.radio_button :gender, "Male"
  %p= f.label "Female"
  %p= f.radio_button :gender, "Female"
  %p= f.label :DOB, "Date of Birth"
  %p= f.date_select( :DOB, :start_year => 1900)
  %p= f.label :description
  %p= f.text_area :description, size: "60X60"
  %p= f.submit
