= form_for [@hospital, @patient] do |f|
  = if f.object.errors.messages.length > 0
    <!-- Render the errors to the user -->
    = f.object.errors.messages.inspect  
    %br
      -f.object.errors.messages.each do |key, value| 
        -value.each do |message| 
          = key = message 
          %br
  = f.text_field :first_name, class: 'form-control focusedInput', placeholder: 'Add First Name Here...'
  = f.text_field :last_name, class: 'form-control focusedInput', placeholder: 'Add Last Name Here...'
  = f.label "Male"
  = f.radio_button :gender, "Male"
  = f.label "Female"
  = f.radio_button :gender, "Female"
  %br
  = f.label :DOB, "Date of Birth"
  = f.date_select( :DOB, :start_year => 1900)
  = f.text_area :description, class: 'form-control ', placeholder: 'Description...', rows: '3'
  = f.submit "Add Patient", class: 'btn btn-success btn-block'
